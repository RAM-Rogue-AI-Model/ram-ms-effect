generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

enum StatName {
  pv
  speed
  attack
}

model Effet {
  id          String   @id @default(uuid())
  stat_name   StatName
  count       Int
  modificator String   @db.VarChar(2)
  duration    Int

  @@index([stat_name])
}
